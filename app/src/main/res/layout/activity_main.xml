<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/almostBlack"
    tools:ignore="HardcodedText"
    tools:context=".MainActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:padding="20dp">

        <TextView
            android:id="@+id/tvOperands"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:lines="2"
            android:maxLines="2"
            android:textColor="@color/white"
            android:textAlignment="textEnd"
            android:textSize="25sp"
            app:layout_constraintBottom_toTopOf="@id/tvResult"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tvResult"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text=""
            android:lines="1"
            android:maxLines="1"
            android:textColor="@color/white"
            android:textAlignment="textEnd"
            android:textSize="40sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        style="@style/buttonRow">

        <Button
            android:id="@+id/bAllClear"
            style="@style/buttonOperator"
            android:background="@color/almostBlack"
            android:text="AC" />

        <Button
            android:id="@+id/bBackSpace"
            style="@style/buttonOperator"
            android:background="@color/almostBlack"
            android:text="âŒ«" />

        <Button
            android:id="@+id/bPercentage"
            style="@style/buttonOperator"
            android:background="@color/almostBlack"
            android:text="%" />

        <Button
            android:id="@+id/bDivision"
            style="@style/buttonOperator"
            android:background="@color/almostBlack"
            android:text="/" />

    </LinearLayout>

    <LinearLayout
        style="@style/buttonRow">

        <Button
            android:id="@+id/b7"
            style="@style/buttonNumber"
            android:background="@color/almostBlack"
            android:text="7" />

        <Button
            android:id="@+id/b8"
            style="@style/buttonNumber"
            android:background="@color/almostBlack"
            android:text="8" />

        <Button
            android:id="@+id/b9"
            style="@style/buttonNumber"
            android:background="@color/almostBlack"
            android:text="9" />

        <Button
            android:id="@+id/bMultiplication"
            style="@style/buttonOperator"
            android:background="@color/almostBlack"
            android:text="*" />

    </LinearLayout>

    <LinearLayout
        style="@style/buttonRow">

        <Button
            android:id="@+id/b4"
            style="@style/buttonNumber"
            android:background="@color/almostBlack"
            android:text="4" />

        <Button
            android:id="@+id/b5"
            style="@style/buttonNumber"
            android:background="@color/almostBlack"
            android:text="5" />

        <Button
            android:id="@+id/b6"
            style="@style/buttonNumber"
            android:background="@color/almostBlack"
            android:text="6" />

        <Button
            android:id="@+id/bSubstraction"
            style="@style/buttonOperator"
            android:background="@color/almostBlack"
            android:text="-" />

    </LinearLayout>

    <LinearLayout
        style="@style/buttonRow">

        <Button
            android:id="@+id/b1"
            style="@style/buttonNumber"
            android:background="@color/almostBlack"
            android:text="1" />

        <Button
            android:id="@+id/b2"
            style="@style/buttonNumber"
            android:background="@color/almostBlack"
            android:text="2" />

        <Button
            android:id="@+id/b3"
            style="@style/buttonNumber"
            android:background="@color/almostBlack"
            android:text="3" />

        <Button
            android:id="@+id/bSum"
            style="@style/buttonOperator"
            android:background="@color/almostBlack"
            android:text="+" />

    </LinearLayout>

    <LinearLayout
        style="@style/buttonRow">

        <Button
            android:id="@+id/bComma"
            style="@style/buttonNumber"
            android:background="@color/almostBlack"
            android:text="." />

        <Button
            android:id="@+id/b0"
            style="@style/buttonNumber"
            android:background="@color/almostBlack"
            android:text="0" />

        <Button
            android:id="@+id/bEquals"
            style="@style/buttonOperator"
            android:layout_weight="2"
            android:background="@color/orange"
            android:text="="
            android:textColor="@color/white"
            android:textSize="40sp" />

    </LinearLayout>

</LinearLayout>